.m-cell .icon{
  flex: 0 0 88rpx;
  height: 88rpx;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.m-cell .icon image{
  width:90%;
  height:90%;
}
.m-cell .content{
  flex:1;
  color: #333;
  font-size: 32rpx;
  padding: 10rpx 0;
  margin-left: 20rpx;
}

.link{
  display: flex;
  align-items: center;
  justify-content: center;
}