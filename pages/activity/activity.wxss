/* pages/activity/activity.wxss */
.activety-main{
margin-top: 20rpx;
}
.activety-main .item{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    white-space: nowrap;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}
/*不可操作状态*/
.activety-main .item.disable{
    color:#c0c0c0
}
.activety-main .item.disable .price{
    color:#c0c0c0 !important;
}
/*不可操作状态end*/
.activety-main .item .pic{
    flex:0 0 200rpx;
    height: 200rpx;
}
.activety-main .item .pic .box{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
    border-radius: 12rpx;
    overflow: hidden;
}
.activety-main .item .pic .box .logo-box{
    flex:1;
    width: 100%;
}
.activety-main .item .pic .box .logo-box image{
    width: 100%;
    height: 100%;
}
.activety-main .item .pic .box  .item{
    flex:0 0 44rpx;
    line-height: 44rpx;
    padding:0;
}
.activety-main .item .body{
    flex: 1;
    margin-left: 20rpx;
}
.activety-main .item .body .label{
    font-weight: bold;
}
.activety-main .item .body .text{
    padding-top: 8rpx;
    /* color: #808080; */
}
.activety-main .item .body .price{
    color: #FF9A13;
    margin-left: 20rpx;
}

/* 操作 */
.activety-main .operation .but-box{
    text-align: center;
}
.activety-main .operation .but-box .but{
    font-size: 32rpx;
    color: #fff;
    padding: 3rpx 10rpx;
    border-radius: 12rpx;
}
.activety-main .operation .full{
    height: 90rpx;
    width: 90rpx;
    border:2rpx solid #c0c0c0;
    border-radius: 100%;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    transform:rotate(315deg);
    position: relative;
}
.activety-main .operation .full::after{
    content: "";
    display: block;
    position: absolute;
    left: 4%;
    top: 4%;
    /* z-index:-1; */
    width: 176%;
    height:176%;
    border:1px solid #e0e0e0;
    border-radius: 100%;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scale(.5, .5);
    transform: scale(.5, .5);
}
