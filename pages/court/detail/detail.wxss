/* pages/court/detail/detail.wxss */
.court-detail .header{
    
}
.court-detail .header .main-img{
    width: 100%;
    border-radius: 12rpx;
    overflow: hidden;
    height: 300rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.local-box{
    line-height: 99rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.local-box .icon{
    flex: 0;
    padding-left: 20rpx;
    /* border-left: 1px solid #eee; */
    position: relative;
}
.local-box .icon::before{
    content: "";
    display: block;
    position: absolute;
    height: 40rpx;
    width: 1px;
    left: 0;
    top: 50%;
    margin-top: -20rpx;
    background: #eee;
}
.court-detail .header .main-img image{
    width: 100%;
}
.chose-time{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    line-height: 99rpx;
    border-radius: 12rpx;
    margin: 20rpx 30rpx;
    padding: 0 20rpx;
}
.chose-time .item-r{
    display: flex;
    align-items: center;
    justify-content: center;
}
.time-interval{
    margin: 20rpx 30rpx;
    border-radius: 12rpx;
    padding-top:20rpx;
    padding-bottom:20rpx;
}
.time-interval .item{
    line-height: 68rpx;
}
.time-interval .time{
    font-weight: bold;
}
.time-interval .payway text{
    /* border:1px solid  */
    padding:3rpx 6rpx;
}
.time-interval .price-box .item{
    display: flex;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}
.time-interval .price-box .item .price{
    flex: 1;
    padding-left: 20rpx;
    font-weight: bold;
}
.time-interval .price-box .item .lable{
    flex: 0;
    display:flex;
align-items:center;
justify-content:center;

}
.time-interval .price-box .item .but-box{
    flex: 0;
    display:flex;
align-items:center;
justify-content:center;

}
.time-interval .price-box .item .but{
    background: #dd524d;
    color:#fff;
    white-space: nowrap;
    border-radius: 24rpx;
    padding: 10rpx 20rpx;
    line-height: 1.5;
}

/* 日历弹出框start */
.weui-demo-dialog{
visibility:hidden;
opacity:0;
transition:all .3s;
}
.weui-half-screen-dialog{
transition:all .3s;
transform:translateY(100%);
}
.weui-demo-dialog_show{
visibility:visible;
opacity:1;
}
.weui-demo-dialog_show .weui-half-screen-dialog{
    transform:translateY(0);
}
    
/* 日历弹出框end */