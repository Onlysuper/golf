<view class="home-page m-font-size-base m-text-color">
    <!-- 搜索栏 -->
    <view class="page-block home-search m-bg-color">
        <view class="city">北京</view>
        <view bindtap="search" class="input-box m-bg-color-grey m-spacing-sm m-border-radius-lg">
            <icon class="icon" size="15" type="search" />
            <input placeholder="请输入球场名称"/>
        </view>
        <view class="phone">
            <icon type="download" />
        </view>
    </view>
    <view class="place-space"></view>
    <!-- 轮播图 -->
    <view class="page-block home-banner">
        <swiper indicator-dots="{{indicatorDots}}"
        autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
        <block wx:for="{{imgUrls}}">
            <swiper-item>
            <image src="{{item}}" class="slide-image m-border-radius-lg" height="150"/>
            </swiper-item>
        </block>
        </swiper>
    </view>
