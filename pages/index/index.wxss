/* pages/index/index.wxss */
.home-search{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    height: 99rpx;
    position: fixed;
    z-index: 100;
    width: 100%;
}

.home-search .input-box{
    flex:1;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-left: 20rpx;
    margin-right: 20rpx;
}
.home-search .input-box .icon{
    flex: 0 0 50rpx;
}
.home-search .input-box input{
    flex: 1;
}
.home-search .city{
    flex:0 0 1;
    display: flex;
    align-items: center;
    justify-content: center;
}
.home-search .city .iconfont{
    
}
.home-search .phone{
    flex:0 0 1;
}



/* 轮播图start */
.home-banner{
    overflow: hidden;
    width: 100%;
}
.home-banner .slide-image{
    width: 100%;
    height: 100%;
    overflow: hidden;
}

/* 选项卡 */
.home-gride{
    display: flex;
    flex-direction: row;
    text-align: center;
    flex-wrap:wrap;
    padding-top:  20rpx;
    padding-bottom:  20rpx;
}
.home-gride .item{
    display: flex;
    flex-direction: column;
    min-width: 25%;
    flex: 0 0 25%;
    /* box-sizing: border-box; */
    
   
}
.home-gride .item navigator{
    padding: 16rpx;
}
.home-gride .item .pic-box{
    width:100%;
}
.home-gride .item .pic-box image{
    width:100%;
    height:88rpx;
    width:88rpx;
}

/* 热门 */
.hot-scrow swiper{
    height: 350rpx;
}
.hot-scrow .m-item{
    padding: 10rpx;
    box-sizing: border-box;
}
.hot-scrow .m-item .slide-image{
    border-radius: 12rpx;
    display:flex;
    align-items:center;
    justify-content:center;
}
.hot-scrow .m-item .slide-image image{
    height: 100%;
}
.hot-scrow .m-item .text{
    /* position: absolute; */
    left: 10rpx;
    bottom: 10rpx;
    right: 0;
}
.hot-scrow .m-item .text{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items:center;

}
.hot-scrow .m-item .text .box{
    flex:1;
}
.hot-scrow .m-item .text .box view{
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.hot-scrow .m-item .text .price{
    flex:0 0 1;
    min-width: 130rpx;
    text-align: right;
}
.hot-scrow .m-item .text .price .tip{
    padding: 0rpx 10rpx;
}
.hot-scrow .slide-image{
    /* width: 100%; */
    height: 220rpx; 
    overflow: hidden;
}

/* 双排列表 */
.home-double-col{

}
.home-double-col .container{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;

}
.home-double-col .container .item{
    flex:0 0 50%;
    box-sizing: border-box;
    padding: 10rpx;
    overflow: hidden;
}
.home-double-col .container .item navigator{
    box-shadow: 0px 0px 3px rgba(0,0,0,0.4);
    margin:3rpx;
    border-radius: 12rpx;
}
.home-double-col .container .item .pic{
    height: 250rpx;
    overflow: hidden;
    display:flex;
    justify-content:center;
    align-items:center;
}

.home-double-col .container .item image{
    width: 100%;
    /* height: 100%; */
}
.home-double-col .container .item .text{
    /* padding: 0 20rpx; */
    line-height: 1.5;
}
.home-double-col .price{
    display: flex;
    flex-direction: row;
    justify-content:space-between;
}
.home-double-col .price .old{
    text-decoration: line-through;
}
/* 最新活动 */
.home-hot-sell .item .pro navigator{
    display: flex;
    flex-direction: row;
}
.home-hot-sell .item .pro{
    padding-top: 30rpx;
    padding-bottom: 30rpx;
}
.home-hot-sell .item .text .tip{
   margin-right: 20rpx;
}
.home-hot-sell .price-box .price{
    font-weight: bold;
}
.home-hot-sell .item .text .tip:last-of-type{
    margin-right: 0;
}
.home-hot-sell .item-title{
    font-size: 32rpx;
    background: #f8f8f8;
    text-align: center;
    text-align: center;
    line-height: 66rpx;
}
.home-hot-sell .item .pro .pic{
    flex:0 0 150rpx;
    height: 150rpx;
    overflow: hidden;
    border-radius: 13rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.home-hot-sell .item .pro .pic image{
    width: 100%;
}
.home-hot-sell .item .pro .content{
    flex:1;
    margin-left: 20rpx;
}
/* 认证会员按钮 */
.vip-container{
    margin:20rpx;
    border-radius: 12rpx;
    overflow:hidden;
}
.vip-container .but{
    line-height: 99rpx;
    text-align: center;
}
.vip-container .content{
    color: #fff;
    padding: 20rpx;
    background: #dd524d;
}