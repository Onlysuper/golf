/* pages/search/index.wxss */
.search-history{
    position: relative;
    z-index: 9;
}
.search-history .operation{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    line-height: 66rpx;
}
.search-history .content .tip{
    padding: 5rpx 10rpx;
}
.list-container{
    margin-top: 20rpx;
    position: relative;
    z-index: 10
}
/* 列表 */
.list-box{

    /* background:red; */
}
.list-box .item{
    padding-left: 30rpx;
    padding-right: 30rpx;
    border-bottom: 1px solid #eee;
}
.list-box .item:last-of-type{
    border-bottom: 0px;
}
.list-box .item navigator{
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 20rpx 0;
}
.list-box .item .pic{
    flex:0 0 150rpx;
    height: 150rpx;
    overflow: hidden;
    border:1px solid #eee;
    border-radius: 12rpx;
}
.list-box .item .pic image{
    width: 100%;
    height: 100%;
}
.list-box .item .content{
    flex:1;
    padding-left: 20rpx;
}