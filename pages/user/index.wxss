.user-box{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding-bottom: 20rpx;
    padding-top: 20rpx;
    border-bottom: 20rpx #f8f8f8 solid;
}
.user-box .img{
   flex: 0 0 200rpx;
   height: 200rpx;
   border-radius: 100%;
}
.user-box .img image{
    width: 100%;
    height: 100%;
    
}
.user-box .phone{
    flex: 1;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-left: 20rpx;
}
.user-box .phone .item-r{
    display: flex;
    align-items: center;
    justify-content: center;
}
.user-box .phone .item-r text{
}
.user-box .phone .item-r .iconfont{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
}